{
	"name": "@harperfast/agent",
	"description": "AI to help you with Harper app management",
	"version": "0.14.1",
	"main": "dist/agent.js",
	"repository": "github:HarperFast/harper-agent",
	"bugs": {
		"url": "https://github.com/harperfast/harper-agent/issues"
	},
	"homepage": "https://github.com/harperfast",
	"scripts": {
		"dev": "tsup agent.ts --format esm --clean --dts --watch --external puppeteer",
		"link": "npm run build && npm link",
		"build": "tsup agent.ts --format esm --clean --dts --external puppeteer",
		"commitlint": "commitlint --edit",
		"start": "node ./dist/agent.js",
		"lint": "oxlint --format stylish .",
		"lint:fix": "oxlint --format stylish . --fix",
		"prepare": "husky",
		"format": "dprint check",
		"format:fix": "dprint fmt",
		"format:staged": "dprint check --staged --allow-no-files",
		"format-and-lint:fix": "npm run format:fix && npm run lint:fix",
		"test": "vitest --run",
		"test:coverage": "vitest run --coverage",
		"test:watch": "vitest",
		"test:e2e": "vitest -c vitest.e2e.config.ts run",
		"prepublishOnly": "npm run build"
	},
	"bin": {
		"harper-agent": "./dist/agent.js"
	},
	"keywords": [],
	"author": {
		"name": "HarperDB",
		"email": "support@harperdb.io"
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.map"
	],
	"license": "None",
	"type": "module",
	"dependencies": {
		"@ai-sdk/anthropic": "^3.0.41",
		"@ai-sdk/google": "^3.0.24",
		"@ai-sdk/openai": "^3.0.26",
		"@harperfast/skills": "^1.0.0",
		"@inkjs/ui": "^2.0.0",
		"@openai/agents": "^0.4.6",
		"@openai/agents-extensions": "^0.4.6",
		"ai": "^6.0.79",
		"chalk": "^5.6.2",
		"cross-spawn": "^7.0.6",
		"dotenv": "^17.2.4",
		"ink": "^6.7.0",
		"ink-stepper": "^0.2.1",
		"ink-task-list": "^2.0.0",
		"ink-virtual-list": "^0.2.3",
		"ollama-ai-provider-v2": "^3.3.0",
		"react": "^19.2.4",
		"zod": "^4.3.6"
	},
	"optionalDependencies": {
		"puppeteer": "^24.37.2"
	},
	"devDependencies": {
		"@commitlint/cli": "^20.4.1",
		"@commitlint/config-conventional": "^20.4.1",
		"@semantic-release/commit-analyzer": "^13.0.1",
		"@semantic-release/git": "^10.0.1",
		"@semantic-release/github": "^12.0.3",
		"@semantic-release/npm": "^13.1.3",
		"@semantic-release/release-notes-generator": "^14.1.0",
		"@types/cross-spawn": "^6.0.6",
		"@types/node": "^25.2.0",
		"@types/react": "^19.2.4",
		"@vitest/coverage-v8": "^4.0.18",
		"conventional-changelog-conventionalcommits": "^9.1.0",
		"dprint": "^0.51.1",
		"express": "^5.2.1",
		"harperdb": "^4.7.19",
		"hono": "^4.11.9",
		"husky": "^9.1.7",
		"ink-testing-library": "^4.0.0",
		"oxlint": "^1.43.0",
		"semantic-release": "^25.0.3",
		"tsup": "^8.5.1",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3",
		"vitest": "^4.0.18"
	}
}
